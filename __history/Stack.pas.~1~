unit Stack;

interface

implementation

  Type
  TStack<T> = class
    Stack: array of T;
    Size: Integer;
    Function Pop(): T;
    Function Peek(): T;
    Procedure Push(Item: T);
    Function IsEmpty(): Boolean;
    constructor Create(Const InintialCapacity: Integer);
    destructor Destroy();
  end;

  constructor TStack<T>.Create(Const InintialCapacity: Integer);
    Begin
      SetLength(Stack, InintialCapacity);
      Size := 0;
    End;

  destructor TStack<T>.Destroy();
    Begin

      inherited;
    End;

  Function TStack<T>.Pop(): T;
    Begin
      Result := Stack[Size - 1];
      Dec(Size);
    End;

  Function TStack<T>.Peek(): T;
    Begin
      Result := Stack[Size - 1];
    End;

  Function TStack<T>.IsEmpty(): Boolean;
    Begin
      Result := (Size = 0);
    End;

  Procedure TStack<T>.Push(Item: T);
    Begin
      Stack[Size] := Item;
      Inc(Size);
    End;
end.
